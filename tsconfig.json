{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@navigation/*": ["navigation/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@redux/*": ["redux/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
    },
    "typeRoots": ["./declarations.d.ts"]
  }
}
